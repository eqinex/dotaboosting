{% extends 'base.html.twig' %}

{% block title %}{{ "Profile" | trans() }}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <form action="{{ path('profile') }}" method="post" enctype="multipart/form-data" id="edit-profile">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span>{{ 'Edit profile' | trans() }}</span>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <p class="text-center">
                                            {% if user.imageUrl is not null %}
                                                <img src="{{ user.imageUrl }}" style="width: 200px" />
                                            {% else %}
                                                <i class="fa fa-3x fa-user text-gray-light text-center m-t-2"></i>
                                                <br>
                                            {% endif %}
                                        </p>
                                        <p class="text-center">
                                            <a href="javascript: void(0)">
                                                <input style="margin-left: 30px" type="file" name="user_image"/>
                                            </a>
                                        </p>
                                        <p class="small text-center">JPG, GIF, PNG. Файл не более 10MB и размером 400 x 300px.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>{{ 'Last name' | trans() }}</label>
                                    <input class="form-control" value="{{ user.lastName }}" name="profile[lastName]">
                                    <p class="help-block">{{ 'Change last name' | trans() }}.</p>
                                </div>
                                <div class="form-group">
                                    <label>{{ 'First name' | trans() }}</label>
                                    <input class="form-control" value="{{ user.firstName }}" name="profile[firstName]">
                                    <p class="help-block">{{ 'Change last name' | trans() }}.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        <button type="submit" class="btn btn-primary">Обновить профиль</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}