{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
     <div class="panel-heading">
        <h3 class="panel-title">{{ 'Please sign in!' | trans() }}</h3>
    </div>
    <div class="panel-body">
        <form role="form">
            <fieldset>
                <div class="form-group">
                    <input class="form-control" type="text" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username' | trans }}" required="required" autocomplete="username" autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="_password" placeholder="{{ 'security.login.password' | trans }}" required="required" autocomplete="current-password">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="_remember_me" value="on">{{ 'security.login.remember_me' | trans }}
                    </label>
                </div>

                <input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit' | trans }}">
            </fieldset>
        </form>
    </div>
</form>